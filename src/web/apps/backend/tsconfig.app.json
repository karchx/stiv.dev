{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node", "express"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@interfaces/*": ["interfaces/*"],
      "@config": ["config"],
      "@utils/*": ["utils/*"],
      "@models/*": ["models/*"]
    }
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
